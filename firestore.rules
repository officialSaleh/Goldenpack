rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rule for root collections (Products, Customers, Orders, Expenses, etc.)
    match /{collectionName}/{docId} {
      // Allow list/get if the user owns the document, or if it doesn't exist yet (for initial checks)
      allow read: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      
      // Allow creating only if the user sets themselves as the owner
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow update/delete only if the user is the confirmed owner
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Rule for user-specific configuration (Settings, Profiles, etc.)
    // Matches /users/{userId} and all sub-paths
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}